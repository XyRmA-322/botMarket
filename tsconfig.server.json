{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "outDir": "./vercel-build",
    "rootDir": ".",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node"
  },
  "include": ["server.ts", "api/**/*.ts"],
  "exclude": ["node_modules"]
}
